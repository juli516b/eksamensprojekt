<Window x:Class="Eksamensprojekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Eksamensprojekt"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1000
        ">
    <Grid>
        <TabControl x:Name="TabControl" HorizontalAlignment="Left" Height="950" Margin="10,10,-0.4,0" VerticalAlignment="Top" Width="984">
            <TabItem Header="Kunder">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Tilbud" >
                <Grid  Background="#FFE5E5E5">
                    <DataGrid HorizontalAlignment="Left" Height="442" Margin="30,84,0,0" VerticalAlignment="Top" Width="547"/>
                    <ListView x:Name="itemListView" HorizontalAlignment="Left" Height="445" Margin="599,81,0,0" VerticalAlignment="Top" Width="295" ItemsSource="{Binding Items}" IsEnabled="False">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="60" Header="Vare nr." DisplayMemberBinding="{Binding ItemNo}"/>
                                <GridViewColumn Width="140" Header="Varenavn" DisplayMemberBinding="{Binding ItemName}"/>
                                <GridViewColumn Width="70" Header="Pris">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock TextAlignment="Right" Text="{Binding ItemPriceF2}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Label x:Name="TotalPrice_Label" Content="Total Pris:" HorizontalAlignment="Left" Height="27" Margin="456,541,0,0" VerticalAlignment="Top" Width="65"/>
                    <Label x:Name="Price_Label" Content="00 kr." HorizontalAlignment="Left" Height="27" Margin="512,541,0,0" VerticalAlignment="Top" Width="65"/>
                    <Button x:Name="AddItem_Button" Content="Tilføj vare" HorizontalAlignment="Left" Height="26" Margin="605,542,0,0" VerticalAlignment="Top" Width="81"/>
                    <TextBox x:Name="Amount_Button" HorizontalAlignment="Left" Height="24" Margin="778,544,0,0" TextWrapping="Wrap" Text="Antal" VerticalAlignment="Top" Width="103"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
